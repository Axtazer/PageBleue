# Forcer HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Sécurité supplémentaire pour HTTPS
Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"

# Lien racine (pas de /index.php)
DirectoryIndex /public/index.php

RewriteEngine On
RewriteBase /

# Configuration des types MIME
AddType application/javascript .js
AddType text/css .css
AddType image/webp .webp

# Redirection des assets vers le dossier public
RewriteRule ^assets/(.*)$ public/assets/$1 [L]

# Réécriture pour /list
RewriteRule ^list(/.*)?$ public/index.php [L,QSA]

# /form
RewriteCond %{THE_REQUEST} \s/+form\.php [NC]
RewriteRule ^ /form [L,R=301]
RewriteRule ^form$ templates/pages/form.php [L]

# /panel (admin page)
RewriteCond %{THE_REQUEST} \s/+panel\.php [NC]
RewriteRule ^ /panel [L,R=301]
RewriteRule ^panel$ templates/admin/dashboard.php [L]

# /login
RewriteCond %{THE_REQUEST} \s/+login\.php [NC]
RewriteRule ^ /login [L,R=301]
RewriteRule ^login$ templates/auth/login.php [L]

# Rediriger tout le reste vers public/index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ public/index.php [L,QSA]

# Time Zone
SetEnv TZ Europe/Paris

# Prevent viewing of .htaccess file
<Files .htaccess>
    order allow,deny
    deny from all
</Files>

# Prevent directory listings
Options All -Indexes

# Protect sensitive directories
RewriteRule ^(config|src) - [F]

# Pages d'erreurs
ErrorDocument 403 "Désolé, vous n'avez pas le droit d'accéder à ce fichier"
ErrorDocument 404 "Vous êtes perdu, je crois"